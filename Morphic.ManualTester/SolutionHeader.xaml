<UserControl x:Class="Morphic.ManualTester.SolutionHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TreeViewItem Name="ControlStack" FontSize="20" FontWeight="Bold" HorizontalAlignment="Stretch"
                      TreeViewItem.Expanded="ControlStack_Expanded" TreeViewItem.Collapsed="ControlStack_Collapsed">
            <TreeViewItem.Header>
                <DockPanel HorizontalAlignment="Stretch" Width="650">
                    <Label Name="SolutionTitle" DockPanel.Dock="Left" Content="SOLUTION HEADER" />
                    <Button Name="RefreshButton" HorizontalAlignment="Right" VerticalAlignment="Center"
                            Content="Refresh" Click="Refresh_Click" FontSize="14" DockPanel.Dock="Right"
                            Visibility="Hidden" />
                </DockPanel>
            </TreeViewItem.Header>
        </TreeViewItem>
    </Grid>
</UserControl>